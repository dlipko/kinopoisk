    <div class="top-border"></div>

      <div class="row">
        <div class="small-12 medium-12 large-12 small-centered columns">
          <header>    
            <h1><%= t('watch_it') %></h1>
            <h2><%= t('desires') %></h2>
          </header>
        </div>

       <div class="small-12 medium-12 large-12 small-centered columns">
        <nav>
          <ul class="inline-list-custom">
            
            <% if current_user == nil %>
              <li><a href='/users/sign_in'><%= t('log_in') %></a></li>
            <% else %>
              <li><a><%= link_to t('movies'), movies_path%></a></li>
              <li><a><%= link_to t('create_post'),  new_movie_path%></a></li>
              <li><a><%= link_to t('edit_user'), edit_user_registration_path %></a></li>
              <li><a><%= link_to t('log_out'), destroy_user_session_path, method: 'delete'%></a></li> 
            
            <% end %> 

          </ul>
        </nav>
