    </div>

    <div class="row">
  <div class="small-12 medium-12 large-12 columns">
    <ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-3 inline-list-custom">
      
      

    <% if @movies.blank? %>
      <h2><%= 'There is now movies. Would you like to add the first?' %></h2>
      <h3><%= link_to 'Create post',  new_movie_path%></h3>

    <%else %>
      <% @movies.each do |movie| %>
      <li>
        <div class="thumbnail">
          <div class="thumbnail-img">
            <div class="thumbnail-hover"><a href="project-01.html"></a></div>
            <a href = <%= '/movies/'+ movie.id.to_s %> > <%= image_tag movie.image.url(:medium), {height: 200} %></a>
          </div>
          <div class="thumbnail-caption"><a class="caption-link" href=<%= '/movies/'+ movie.id.to_s %> ><%= movie.title %></a></div>
        </div>
      </li>
      <% end %>
    <% end %>
            
    
    </ul>
  </div>
</div>


